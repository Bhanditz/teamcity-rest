<?xml version="1.0" encoding="UTF-8"?>
<project name="rest-api" default="all">


  <property file="rest-api.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
  </path>
  <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
  <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>

  <!-- Compiler options -->

  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.sbas/**"/>
    <exclude name="**/.IJI.*/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>


  <!-- Project Libraries -->

  <path id="library.teamcity_open_api_common.classpath">
    <pathelement location="${path.variable.teamcitydistribution}/devPackage/common-api.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/devPackage/runtime-util.jar"/>
  </path>

  <path id="library.teamcity_open_api_server.classpath">
    <pathelement location="${path.variable.teamcitydistribution}/devPackage/server-api.jar"/>
  </path>

  <path id="library.teamcity_third-party.classpath">
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/annotations.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/openapi.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/spring-webmvc.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/spring.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/util.jar"/>
  </path>

  <path id="library.tomcat.classpath">
    <pathelement location="${path.variable.teamcitydistribution}/lib/servlet-api.jar"/>
  </path>


  <!-- Application Server Libraries -->

  <!-- Modules -->


  <!-- Module rest-api -->

  <dirname property="module.rest-api.basedir" file="${ant.file}"/>


  <property name="compiler.args.rest-api" value="${compiler.args}"/>

  <property name="rest-api.output.dir" value="${module.rest-api.basedir}/out/production/rest-api"/>
  <property name="rest-api.testoutput.dir" value="${module.rest-api.basedir}/out/test/rest-api"/>

  <path id="rest-api.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>

  <path id="rest-api.module.classpath">
    <pathelement location="${basedir}/lib/asm-3.1.jar"/>
    <pathelement location="${basedir}/lib/jersey-core-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jersey-server-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jersey-spring-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jsr311-api-1.0.jar"/>
    <pathelement location="${basedir}/lib/grizzly-servlet-webserver-1.8.6.4.jar"/>
    <path refid="library.teamcity_open_api_server.classpath"/>
    <path refid="library.teamcity_open_api_common.classpath"/>
    <path refid="library.teamcity_third-party.classpath"/>
    <path refid="library.tomcat.classpath"/>
    <pathelement location="${basedir}/lib/activation.jar"/>
    <pathelement location="${basedir}/lib/jaxb-api.jar"/>
    <pathelement location="${basedir}/lib/jaxb-impl.jar"/>
    <pathelement location="${basedir}/lib/jaxb1-impl.jar"/>
    <pathelement location="${basedir}/lib/jsr173_1.0_api.jar"/>
    <pathelement location="${basedir}/lib/jersey-json-1.0.2.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/server.jar"/>
  </path>

  <path id="rest-api.runtime.module.classpath">
    <pathelement location="${rest-api.output.dir}"/>
    <pathelement location="${rest-api.testoutput.dir}"/>
    <pathelement location="${basedir}/lib/asm-3.1.jar"/>
    <pathelement location="${basedir}/lib/jersey-core-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jersey-server-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jersey-spring-1.0.2.jar"/>
    <pathelement location="${basedir}/lib/jsr311-api-1.0.jar"/>
    <pathelement location="${basedir}/lib/grizzly-servlet-webserver-1.8.6.4.jar"/>
    <path refid="library.teamcity_open_api_server.classpath"/>
    <path refid="library.teamcity_open_api_common.classpath"/>
    <path refid="library.teamcity_third-party.classpath"/>
    <path refid="library.tomcat.classpath"/>
    <pathelement location="${basedir}/lib/activation.jar"/>
    <pathelement location="${basedir}/lib/jaxb-api.jar"/>
    <pathelement location="${basedir}/lib/jaxb-impl.jar"/>
    <pathelement location="${basedir}/lib/jaxb1-impl.jar"/>
    <pathelement location="${basedir}/lib/jsr173_1.0_api.jar"/>
    <pathelement location="${basedir}/lib/jersey-json-1.0.2.jar"/>
    <pathelement location="${path.variable.teamcitydistribution}/webapps/ROOT/WEB-INF/lib/server.jar"/>
  </path>


  <patternset id="excluded.from.module.rest-api">
    <patternset refid="ignored.files"/>
  </patternset>

  <patternset id="excluded.from.compilation.rest-api">
    <patternset refid="excluded.from.module.rest-api"/>
  </patternset>

  <path id="rest-api.module.sourcepath">
    <dirset dir="${module.rest-api.basedir}">
      <include name="src"/>
    </dirset>
  </path>


  <target name="compile.module.rest-api" depends="compile.module.rest-api.production,compile.module.rest-api.tests"
          description="Compile module rest-api"/>

  <target name="compile.module.rest-api.production" description="Compile module rest-api; production classes">
    <mkdir dir="${rest-api.output.dir}"/>
    <javac2 destdir="${rest-api.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
            memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.rest-api}"/>
      <bootclasspath refid="rest-api.module.bootclasspath"/>
      <classpath refid="rest-api.module.classpath"/>
      <src refid="rest-api.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.rest-api"/>
    </javac2>

    <copy todir="${rest-api.output.dir}">
      <fileset dir="${module.rest-api.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="compile.module.rest-api.tests" depends="compile.module.rest-api.production"
          description="compile module rest-api; test classes" unless="skip.tests"/>

  <target name="clean.module.rest-api" description="cleanup module">
    <delete dir="${rest-api.output.dir}"/>
    <delete dir="${rest-api.testoutput.dir}"/>
  </target>

  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>

  <target name="clean" depends="clean.module.rest-api" description="cleanup all"/>

  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/artifactsTemp"/>
  </target>

  <target name="build.all.artifacts" description="Build all artifacts">

    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>

  <target name="all" depends="init, clean, compile.module.rest-api, build.all.artifacts" description="build all"/>
</project>